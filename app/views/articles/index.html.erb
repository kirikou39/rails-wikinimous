<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6 my-5">
      <% @articles.each do |article| %>
        <article class="pb-4">
          <h2>
            <%= link_to article.title, article_path(article) %>
          </h2>
          <%= article.content %>
        </article>
        <% end %>
    </div>
  </div>
</div>
